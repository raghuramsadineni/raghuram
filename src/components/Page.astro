---
import raghuram from "../../public/background.svg";
export interface Props {
   title: string;
}

const { title } = Astro.props as Props;
---

<section class="sm:ml-64 h-screen" id={title}>
   <div class="sm:p-4 mt-14 h-full flex flex-col md:flex-row">
      <div class="p-8 h-1/2 flex flex-col justify-center md:w-1/2 md:h-screen">
         <div class="flex flex-col sm:flex-row">
            <p class="text-2xl whitespace-nowrap text-gray-900 dark:text-white">
               Hi I'm
            </p>
            <p
               class="typed-out overflow-hidden border-r-2 border-black whitespace-nowrap text-2xl w-0 sm:ml-1 text-gray-900 dark:text-white"
            >
               Raghuram Sadineni
            </p>
         </div>
         <div class="flex">
            <p class="text-2xl text-gray-900 dark:text-white">
               I am Currently pursuing my Master's in Computer Science at
               <a
                  href="#"
                  class="inline-flex items-center justify-center text-base font-medium p-2 text-gray-600 rounded-lg bg-gray-50 hover:text-gray-900 hover:bg-gray-100 dark:text-gray-400 dark:bg-gray-800 dark:hover:bg-gray-700 dark:hover:text-white"
               >
                  <span class="w-full text-2xl">LSU</span>
               </a>
            </p>
         </div>
      </div>
      <div class="h-1/2 flex justify-center items-center md:w-1/2 md:h-screen">
         <svg
            version="1.1"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 500 500"
            width="100%"
            id="blobSvg"
            style="opacity: 1;"
            filter="blur(0px)"
            transform="rotate(0)"
         >
            <image
               x="0"
               y="0"
               width="100%"
               height="100%"
               clip-path="url(#shape)"
               href="./raghuram.png"
               preserveAspectRatio="none"
            />
            <defs>
               <linearGradient id="gradient" x1="0%" y1="0%" x2="0%" y2="100%">
                  <stop offset="0%" style="stop-color: rgb(136, 19, 55);"
                  ></stop>
                  <stop offset="100%" style="stop-color: rgb(136, 19, 55);"
                  ></stop>
               </linearGradient>
            </defs>

            <clipPath id="shape">
               <path id="blob" fill="url(#gradient)">
                  <animate
                     attributeName="d"
                     dur="10s"
                     repeatCount="indefinite"
                     values="M440.5,320.5Q418,391,355.5,442.5Q293,494,226,450.5Q159,407,99,367Q39,327,31.5,247.5Q24,168,89,125.5Q154,83,219.5,68Q285,53,335.5,94.5Q386,136,424.5,193Q463,250,440.5,320.5Z;M453.78747,319.98894Q416.97789,389.97789,353.96683,436.87838Q290.95577,483.77887,223.95577,447.43366Q156.95577,411.08845,105.64373,365.97789Q54.33169,320.86732,62.67444,252.61056Q71.01719,184.3538,113.01965,135.21007Q155.02211,86.06634,220.52211,66.46683Q286.02211,46.86732,335.5,91.94472Q384.97789,137.02211,437.78747,193.51106Q490.59704,250,453.78747,319.98894Z;M411.39826,313.90633Q402.59677,377.81265,342.92059,407.63957Q283.24442,437.46649,215.13648,432.5428Q147.02853,427.61911,82.23325,380.9572Q17.43796,334.29529,20.45223,250.83809Q23.46649,167.38089,82.5856,115.05707Q141.70471,62.73325,212.19045,63.73015Q282.67618,64.72705,352.67308,84.79839Q422.66998,104.86972,421.43486,177.43486Q420.19974,250,411.39826,313.90633Z;M440.5,320.5Q418,391,355.5,442.5Q293,494,226,450.5Q159,407,99,367Q39,327,31.5,247.5Q24,168,89,125.5Q154,83,219.5,68Q285,53,335.5,94.5Q386,136,424.5,193Q463,250,440.5,320.5Z;"
                  ></animate>
               </path>
            </clipPath>
         </svg>
      </div>
   </div>
</section>

<style>
   .typed-out {
      animation: typing 8s steps(24, end) infinite, blink 1s infinite;
   }
   @keyframes typing {
      from {
         width: 0%;
      }
      50% {
         width: calc(204px);
      }
      to {
         width: 0%;
      }
   }
   @keyframes blink {
      from {
         border-color: transparent;
      }
      to {
         @apply border-rose-900;
      }
   }
</style>
