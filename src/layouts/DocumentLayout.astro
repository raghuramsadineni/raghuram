---
export interface Props {
	title: string;
}

const { title = "Raghuram Sadineni" } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />

		<!-- Adding Ionic -->
		<script
			type="module"
			src="https://cdn.jsdelivr.net/npm/@ionic/core/dist/ionic/ionic.esm.js"
		></script>
		<script
			nomodule
			src="https://cdn.jsdelivr.net/npm/@ionic/core/dist/ionic/ionic.js"
		></script>
		<link
			rel="stylesheet"
			href="https://cdn.jsdelivr.net/npm/@ionic/core/css/ionic.bundle.css"
		/>

		<!-- Adding Ionicons -->
		<script
			type="module"
			src="https://cdn.jsdelivr.net/npm/ionicons/dist/ionicons/ionicons.esm.js"
		></script>
		<script
			nomodule
			src="https://cdn.jsdelivr.net/npm/ionicons/dist/ionicons/ionicons.js"
		></script>

		<title>{title.length !== 0 ? title : "Raghuram Sadineni"}</title>
	</head>
	<body>
		<ion-app>
			<slot />
		</ion-app>
	</body>
</html>
