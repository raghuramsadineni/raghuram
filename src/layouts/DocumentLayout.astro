---
// @ts-ignore
import { pwaInfo } from 'virtual:pwa-info';
import ReloadPrompt from "../components/ReloadPrompt/index.astro";

export interface Props {
	title: string;
}

const { title = "Raghuram Sadineni" } = Astro.props as Props;

---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Raghuram Sadineni's personal portfolio page.">
		<meta name="google-site-verification" content="jLXQRNXaSooEoKzs4xtncx1DA7mTkfcNixExrq6PIl8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="apple-touch-icon" type="image/svg+xml" href="/favicon.svg" >
		<meta name="generator" content={Astro.generator} />
		<meta name="theme-color" content="#9F1239"/>

		<title>{title.length !== 0 ? title : "Raghuram Sadineni"}</title>
		<script is:inline>
			if (
				localStorage.getItem("color-theme") === "dark" ||
				(!("color-theme" in localStorage) &&
					window.matchMedia("(prefers-color-scheme: dark)").matches)
			) {
				document.documentElement.classList.add("dark");
			} else {
				document.documentElement.classList.remove("dark");
			}
		</script>
		<script src="/src/pwa.ts"></script>
		{ pwaInfo && <Fragment set:html={pwaInfo.webManifest.linkTag} /> }
	</head>
	<body class="bg-white dark:bg-gray-900">
		<slot />
		<ReloadPrompt />
	</body>
</html>
